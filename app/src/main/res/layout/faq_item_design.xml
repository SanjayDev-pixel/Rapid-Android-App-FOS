<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/faq_linearlayout"
        android:padding="@dimen/_5sdp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/black_242424"
                android:id="@+id/question_tv"
                android:text="Hello How Are You?xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_weight="0.9"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium" />

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/plus_iv"
                android:padding="@dimen/_5sdp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_down_arrow_black"
                android:layout_weight="0.1"
                android:foregroundGravity="right" />

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/minus_iv"
                android:padding="@dimen/_5sdp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_down_arrow_black"
                android:layout_weight="0.1"
                android:foregroundGravity="right"
                android:rotation="-180.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#ff5f6368"
                android:id="@+id/answers_tv"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/roboto_regular"
                android:text="hi nikita How r u nhgfhghghgjh ghhgdhGDHGd gdhAGDHhdgHJDG GdhghdghDG Hgdhghd ghghgd GHGHa ghsgdhg" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/material_grey_300"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottom_layout"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1sdp" />
</LinearLayout>