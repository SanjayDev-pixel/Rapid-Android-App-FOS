<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_menu_action"
    android:visibility="visible"
    android:background="@drawable/app_color_grideant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/menu_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_collapseMode="parallax"
        app:srcCompat="@drawable/ic_menu_cross"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:id="@+id/txtHeading"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_8sdp"

        android:layout_centerHorizontal="true"
        android:text="Instruction"
        android:fontFamily="@font/poppins_bold" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/top_2_corner_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/linerContainer"
        android:layout_below="@+id/menu_close">
       <include layout="@layout/selfie_instructions_layout"/>
    </LinearLayout>

</RelativeLayout>

